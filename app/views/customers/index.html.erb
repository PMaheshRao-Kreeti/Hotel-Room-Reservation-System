<% if user_logged_in? %>
  <div class="container">
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
    <div class="row">
      <h2 class="text-center">Welcome Customer indexpage <%= current_user.name %>(<%= current_user.role %>)</h2>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <h2 class="text-center">
        Please login first !!! Before trying to access Customer dashboard :  
        <%= link_to  "Login", login_path, class: 'btn btn-md btn-success' %>
      </h2>
    </div>
  </div>  
<% end %>