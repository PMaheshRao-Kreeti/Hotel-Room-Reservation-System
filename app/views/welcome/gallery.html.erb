<div class="container">
  <div class="row p-3">
    <h2 class="text-center">Gallery</h2>
  </div>

  <div class="row">
      <div class="col-lg-12 mt-5 mb-3">
      <% if current_user.role == 'admin' %>  
        <%= link_to "Back to Hotel", hotels_path, class: "btn btn-warning"%>
      <%else%>
        <%= link_to "Back to Home", customers_path, class: "btn btn-primary"%>
      <% end %>
      </div>
    </div>
    
  <div class="row">
    <% (1..12).each do |value| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 d-flex">
        <%= image_tag "gallery/#{value}.jpg", alt: 'photo.', class: 'img-fluid my-2 p-2 rounded-5' %>
      </div>
    <% end %>
  </div>

</div>