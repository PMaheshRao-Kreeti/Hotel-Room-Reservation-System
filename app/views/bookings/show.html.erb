
  <div class="col-lg-12 pb-4">
    <div class="card ">
      <h2 class="card-title p-2 text-center"> Booking Details</h2>
        <% if @booking.booking_status == 'approved'%>
          <div class="card-text p-2"><strong> Booking Status : <span class="text-success text-uppercase"><%= @booking.booking_status %></span></strong></div>
        <% elsif @booking.booking_status == 'rejected' || @booking.booking_status == 'cancelled'%>
          <div class="card-text p-2"><strong> Booking Status : <span class="text-danger text-uppercase"><%= @booking.booking_status %></span></strong></div>
        <% else %>
          <div class="card-text p-2"><strong> Booking Status : <span class="text-warning text-uppercase"><%= @booking.booking_status %></span></strong></div>
        <% end %>
        
        <div class="card-text p-2"><strong> Booked At : <span class="text-success "><%= @booking.created_at.localtime.strftime('%d-%m-%Y, %H:%M:%S') %></span></strong></div>
        <div class="row p-3">
          <div class="col-lg-6">
          <div class="card-text"><strong>Guest Name</strong> : <%= @booking.guest_name %>  </div>
          <div class="card-text"><strong>Booking email</strong> : <%= @booking.user.email %>  </div>
          <div class="card-text"><strong>Phone no.</strong> : <%= @booking.user.phone %> </div>
          <div class="card-text"><strong>Number of Guest</strong> : <%= @booking.no_of_guest %> </div>
        </div>
        <div class="col-lg-6">
          <div class="card-text"><strong>Room Type</strong> : <%= @booking.room_type %>   </div>
          <div class="card-text"><strong>Check In Date</strong> : <%= @booking.check_in_date  %> </div>
          <div class="card-text"><strong>Check Out Date</strong> : <%= @booking.check_out_date %> </div>
          <%if @booking.booking_status == 'approved' %>
            <div class="card-text"><strong>Room ID Given : </strong><%= @booking.room_id %> </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="card p-2">
      <h2 class="card-title text-center pt-3">Hotel Details</h2>
      <div class="row py-2">
        <div class="col-lg-5 p-3">
          <p class="card-text"><strong>Name : </strong><%= @hotel.name %></p>
          <p class="card-text"><strong>Description : </strong><%= @hotel.description %></p>
          <p class="card-text"><strong>Address : </strong><%= @hotel.address %></p>
          <p class="card-text"><strong>City : </strong><%= @hotel.city %></p>
          <p class="card-text"><strong>State : </strong><%= @hotel.state %></p>
        </div>
        <div class="col-lg-3 p-3">
          <p class="card-text"><strong>Country : </strong><%= @hotel.country %></p>
          <p class="card-text"><strong>Pincode : </strong><%= @hotel.pincode %></p>
          <p class="card-text"><strong>latitude : </strong><%= @hotel.latitude %></p>
          <p class="card-text"><strong>longitude : </strong><%= @hotel.longitude %></p>
        </div>
        <div class="col-lg-4">
          <% if @hotel.hotel_image.attached? %>
            <%= image_tag @hotel.hotel_image, alt: 'Hotel Image', class: 'img-fluid rounded-3 p-1' %>
          <% end %>
        </div>
      </div>

      <div class="container my-5">
        <div class="row">
          <h2 class="text-center py-3">Hotel Location</h2>
          <div class="mapouter">
            <div class="gmap_canvas">
              <iframe width="100%" height="500px" id="gmap_canvas" src="https://maps.google.com/maps?q=<%= @hotel.latitude %>,<%= @hotel.longitude %>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
              <style>.mapouter{position:relative;text-align:right;height:100%;width:100%;}</style>
              <style>.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;}</style>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

