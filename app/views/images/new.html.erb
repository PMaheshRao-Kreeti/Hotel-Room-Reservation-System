<div class="container mt-3">
  <div class="row mt-2">
    <div class="card p-3">
      <h2 class="text-center"> Add Gallery Image</h2>
    
      <%= form_with model: @hotel_gallery_image, url: images_path do |form| %>    
        <%= form.hidden_field :hotel_id, value: session[:hotel_id] %>
        <div class="row mt-5">
          <div class="col-lg-12">
            <div class="form-group mb-3">
              <%= form.label :image %> <br>
              <%= form.file_field :image %>
              <% if @hotel_gallery_image.errors.include?(:image) %>
                <p class="text-danger"><%= @hotel_gallery_image.errors.full_messages_for(:image).join(', ') %></p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row my-3">
          <div class="col-lg-1">
            <%= form.submit 'Upload',class: "btn btn-primary btn-lg" %>
          </div>
          <div class="col-lg-2">
            <%= link_to "Back", hotel_path(session[:hotel_id]), class: "btn btn-warning btn-lg" %>
          </div>
        </div>
      <% end %>
    
    </div>
  </div>
</div>
