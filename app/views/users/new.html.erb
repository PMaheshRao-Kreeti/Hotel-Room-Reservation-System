<div class="container h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11">
      <div class="text-black" style="border-radius: 25px;">
        <div class="p-md-5">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up & Registraion</p>
              <%= form_with model:@user, url: signup_path do |form| %>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="name">Name</label>
                    <%= form.text_field :name, class: 'form-control' %>
                    <% @user.errors.full_messages_for(:name).each do |message| %>
                      <p class="text-danger"><%= message%></p>
                    <% end %>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="email">Email</label>
                    <%= form.email_field :email, class: 'form-control' %>
                    <% @user.errors.full_messages_for(:email).each do |message| %>
                      <p class="text-danger"><%= message%></p>
                    <% end %>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="phone">Phone Number</label>
                    <%= form.text_field :phone, class: 'form-control' %>
                    <% @user.errors.full_messages_for(:phone).each do |message| %>
                      <p class="text-danger"><%= message%></p>
                    <% end %>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="password">Password</label>
                    <%= form.password_field :password, class: 'form-control' %>
                    <% @user.errors.full_messages_for(:password).each do |message| %>
                      <p class="text-danger"><%= message%></p>
                    <% end %>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="password_confirmation">Confirm password</label>
                    <%= form.password_field :password_confirmation, class: 'form-control' %>
                    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                      <p class="text-danger"><%= message%></p>
                    <% end %>
                  </div>
                </div>
                <input type="hidden" name="role" value=2>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>
            </div>
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                class="img-fluid" alt="Sample image">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

