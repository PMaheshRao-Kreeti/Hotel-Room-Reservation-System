<% if @hotel.rooms.present? %>
  <div class="row my-5">
    <div class="col-lg-12">
        <% if current_user.role == 'admin' %>  
          <%= link_to "Back to hotel", hotels_path, class: "btn btn-warning"%>
          <%= link_to "Add new hotel", new_hotel_path, class: "btn btn-primary"%>
          <%= link_to "Add new room", new_room_path, class: "btn btn-success"%>
        <%else%>
          <%= link_to "Back to Hotel", hotels_path, class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
    <h2 class="text-center">HOTEL : <%= @hotel.name %></h2>
    <div class="col-lg-12 d-flex mt-5">
      <div class="col-lg-3">
        <% if @hotel.hotel_image.attached? %>
          <%= image_tag @hotel.hotel_image, alt: 'Hotel Image',class: 'img-fluid rounded-3 p-2' %>
        <% end %>
      </div>
      <div class="col-lg-9 d-flex m-2">
        <div class="col-lg-6 p-2">
          <p class="lead"><strong>Description : </strong><%= @hotel.description %></p>
          <p class="lead"><strong>Address : </strong><%= @hotel.full_address %></p>
          <p class="lead"><strong>Available : Wi-Fi , Room-service , Swimming pool , Car rental services , Laundry services .</strong></p>
        </div>

        <div class="col-lg-1"></div>
        
        <div class="col-lg-3 p-2">
          <p class="lead"><strong>Room Price List :</strong></p>
          <p class="lead">Single Bedroom : <strong>499</strong>  Rs.</p>
          <p class="lead">Double Bedroom : <strong>799</strong>  Rs.</p>
          <p class="lead">Suite : <strong>1299</strong> Rs.</p>
          <p class="lead">Dormitory : <strong>1799</strong>  Rs.</p> 
        </div>
        <div class="col-lg-2 p-2">
          <%= link_to 'Book Room', new_hotel_booking_path(@hotel), class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
    <div class="container my-5">
      <div class="row">
        <div class="h2 text-center">Homestay Location</div>
        <div class="mapouter">
          <div class="gmap_canvas">
            <iframe width="100%" height="500px" id="gmap_canvas" src="https://maps.google.com/maps?q=<%= @hotel.latitude %>,<%= @hotel.longitude %>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            <style>.mapouter{position:relative;text-align:right;height:100%;width:100%;}</style>
            <style>.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;}</style>
          </div>
        </div>
      </div>
    </div>
  </div>
  
<% else %>
  <div class="row mt-5">
      <div class="col-lg-2 my-2 ">
        <%= link_to "Back to Hotel", hotels_path, class: "btn btn-primary"%>
      </div>
    <h2 class="text-danger">Sorry No Available Room !!!</h2>
  </div>

<% end %>