<% if @hotel.rooms.present? %>
  <div class="row mb-2">
    <div class="h2 text-center "><span class="border-bottom border-2 border-dark pb-2">HOTEL  <span class="text-info"><%= @hotel.name %></span> </span></div>
    <div class="col-lg-12 my-3">
      <% if current_user.role == 'admin' %>  
        <%= link_to "Back", hotels_path, class: "btn btn-warning"%>
        <%= link_to "Hotel +", new_hotel_path, class: "btn btn-primary"%>
        <%= link_to "Room +", new_room_path, class: "btn btn-success"%>
      <%else%>
        <%= link_to "Back", hotels_path, class: "btn btn-primary"%>
      <% end %>
    </div>

    <div class="col-lg-12 mt-4">
      <div class="row">
        <div class="col-lg-10 col-md-12 mx-auto">
          <div class="row">
            <div class="col-lg-6 col-md-12 p-2">
              <p class="fs-5"><strong>Description : </strong><%= @hotel.description %></p>
              <p class="fs-5"><strong>Address : </strong><%= @hotel.full_address %></p>
              <p class="fs-5"><strong>Available: Wi-Fi, Room-service, Swimming pool, Car rental services, Laundry services.</strong></p>
            </div>
            <div class="col-lg-4 col-md-7 p-2">
              <p class="fs-5"><strong>Room per day charge :</strong></p>
              <% single_bedroom = @hotel.rooms.where(room_type: 'Single Bed').order(:price).pluck(:price).presence || [0] %>
              <p class="fs-5">Single Bedroom: <strong><%= single_bedroom.min %> - <%= single_bedroom.max %> Rs.</strong></p>

              <% double_bedroom = @hotel.rooms.where(room_type: 'Double Bed').order(:price).pluck(:price).presence || [0] %>
              <p class="fs-5">Double Bedroom: <strong><%= double_bedroom.min %> - <%= double_bedroom.max %> Rs.</strong></p>

              <% suite = @hotel.rooms.where(room_type: 'Suite').order(:price).pluck(:price).presence || [0] %>
              <p class="fs-5">Suite: <strong><%= suite.min %> - <%= suite.max %> Rs.</strong></p>

              <% dormitory = @hotel.rooms.where(room_type: 'Dormitory').order(:price).pluck(:price).presence || [0] %>
              <p class="fs-5">Dormitory: <strong><%= dormitory.min %> - <%= dormitory.max %> Rs.</strong></p>

            </div>
            <div class="col-lg-2 col-md-5 p-2">
              <%= link_to 'Book Room', new_hotel_booking_path(@hotel), class: 'btn btn-success btn-lg' %>
            </div>
          </div>
        </div>

        <div class="container mb-3">
          <div class="row">
            <h2 class="text-center">Hotel Images : </h2>
            <div class="col-lg-12">
              <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                  <% if @hotel.hotel_image.attached? %>
                    <%= image_tag @hotel.hotel_image, alt: 'Hotel Image', class: 'img-fluid rounded-5 p-2' %>
                  <% end %>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                  <% if @hotel.hotel_image.attached? %>
                    <%= image_tag @hotel.hotel_image, alt: 'Hotel Image', class: 'img-fluid rounded-5 p-2' %>
                  <% end %>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12">
                  <% if @hotel.hotel_image.attached? %>
                    <%= image_tag @hotel.hotel_image, alt: 'Hotel Image', class: 'img-fluid rounded-5 p-2' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  

      
    <%# Google map integration for homestay location %>
    <div class="container my-5">
      <div class="row">
        <div class="h2 text-center">Homestay Location</div>
        <div class="mapouter">
          <div class="gmap_canvas">
            <iframe width="100%" height="500px" id="gmap_canvas" src="https://maps.google.com/maps?q=<%= @hotel.latitude %>,<%= @hotel.longitude %>&t=&z=14&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            <style>.mapouter{position:relative;text-align:right;height:100%;width:100%;}</style>
            <style>.gmap_canvas {overflow:hidden;background:none!important;height:100%;width:100%;}</style>
          </div>
        </div>
      </div>
    </div>
  </div>
  
<% else %>
  <div class="row mt-5">
      <div class="col-lg-2 my-2 ">
        <%= link_to "Back to Hotel", hotels_path, class: "btn btn-primary"%>
      </div>
    <div class="card shadow p-3">
      <h2 class="text-danger">No Rooms are available in this Hotel, Please Book different Hotels Room.</h2>
    </div>
  </div>

<% end %>