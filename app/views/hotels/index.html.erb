<% if !user_logged_in? %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="text-center">
          Please login first!!! Before trying to access the admin dashboard:
          <%= link_to "Login", root_path, class: 'btn btn-md btn-success' %>
        </h2>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <%if flash[:notice].present?%>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-lg-12">
        <%= render "search_and_filter" %>

        <div class="row mt-5 mb-2">
          <div class="col-12">
            <h2 class="text-center text-success"><span class="border-bottom border-2 border-dark pb-2">All Hotel List</span></h2>
          </div>
        </div>

        <% if current_user.role == 'admin' %>
          <div class="col-12 mb-3">
            <%= link_to "Dashboard", admins_path, class: "btn btn-warning px-4 mt-1" %>
            <%= link_to "Hotel +", new_hotel_path, class: "btn btn-primary px-4 mt-1" %>
            <%#= link_to "Room +", new_room_path, class: "btn btn-success px-4 mt-1"%>
          </div>
        <% else %>
          <div class="col-12 mb-3">
            <%= link_to "Home", customers_path, class: "btn btn-warning" %>
          </div>
        <% end %>

        <%= render "hotels_list" %>
      </div>
    </div>
  </div>
<% end %>
