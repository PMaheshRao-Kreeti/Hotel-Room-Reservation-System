<div class="container px-5">
  <div class="row px-5">
    <div class="col-lg-12 px-5">
      <%= flash[:notice] %>
      
      <div class="card my-3">
        <div class="card-body">
          <h2 class="text-center">Hotel List</h2>
        </div>
      </div>
    
      <% if current_user.role == 'admin' %>  
        <%= link_to "Add new hotel", new_hotel_path, class: "btn btn-primary"%>
        <%#= link_to "Add new room", new_room_path, class: "btn btn-success"%>
        <%= link_to "Back to dashboard", admin_dashboard_path, class: "btn btn-warning"%>
      <%else%>
        <%= link_to "Back to Home", customers_path, class: "btn btn-primary"%>
      <% end %>

      <div class="row">
        <% @hotels.each do |hotel| %>
          <div class="col-md-4">
            <div class="card mt-5">
              <% if hotel.hotel_image.attached? %>
                <%= image_tag hotel.hotel_image, alt: 'hotel image', class: 'hotel-img p-2' %> 
              <% else %>
                <%= image_tag("gallery_2.jpg", class: 'hotel-img p-2') %>
              <% end %> 
              <div class="card-body">
                <h5 class="card-title"><%= hotel.name %></h5>
                <p class="card-text"><strong>Description : </strong><%= hotel.description %></p>
                <p class="card-text"><strong>Address : </strong><%= hotel.full_address %></p>

                <%# room_count(hotel) %>
                <p class="card-text"><strong>Room Available:</strong></p>
                <p class="card-text">Single Bedroom :<%#= @single_bedroom_count %>2 Available</p>
                <p class="card-text">Double Bedroom :<%#= @double_bedroom_count %>0 Available</p>
                <p class="card-text">Suite :<%#= @suite_count %>1 Available</p>
                <p class="card-text">Dormitory :<%#= @dormitory_count %>2 Available</p>
                
                <%if current_user.role == 'admin' %>
                  <p class="card-text"><strong>Price Range : </strong><%#= hotel.price_range %> 499 - 1599 Rs.</p>
                  <%= link_to 'Edit detail', edit_hotel_path(hotel), class: 'btn btn-success' %>
                  <%= link_to 'Delete', hotel_path(hotel), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
                <% else %>
                  <%= link_to 'Explore Rooms', hotel_path(hotel), class: 'btn btn-success' %> <strong><%#= hotel.price_range %> 499 - 1599 Rs.</strong>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div >
  </div>
</div>
