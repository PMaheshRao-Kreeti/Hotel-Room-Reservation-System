<% if !user_logged_in? %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="text-center">
          Please login first!!! Before trying to access the admin dashboard:
          <%= link_to "Login", root_path, class: 'btn btn-md btn-success' %>
        </h2>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= render "search_and_filter" %>

        <div class="row mt-5 mb-2">
          <div class="col-12">
            <h2 class="text-center">All Hotel List</h2>
          </div>
        </div>

        <% if current_user.role == 'admin' %>
          <div class="col-12 mb-3">
            <%= link_to "Add new hotel", new_hotel_path, class: "btn btn-primary" %>
            <%= link_to "Back to dashboard", admins_path, class: "btn btn-warning" %>
          </div>
        <% else %>
          <div class="col-12 mb-3">
            <%= link_to "Back to Home", customers_path, class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "hotels_list" %>
      </div>
    </div>
  </div>
<% end %>
