<div class="container ">
  <div class="row">
    <div class="col-lg-12">

      <% if @hotels.empty? %>
        <div class="alert alert-danger text-center">
          Notice : No results found!!! Please enter a valid keyword for the search.
        </div>
      <% end %>

      <%= render "search_and_filter" %>

      <div class="row mt-4">
        <div class="h2 text-center">Search Result List</div>
      </div>

      <div class="row mt-3">
        <% @hotels.each do |hotel| %>

          <% available_room_count_of_hotel(hotel) %>
          
          <%= render  "hotel_card", hotel: hotel %>
        <% end %>
      </div>

    </div>
  </div>
</div>
